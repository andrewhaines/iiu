---
import { Image } from "@astrojs/image/components";
import backgroundImage from "@images/stock-charts.jpg";
import HomeCard from "@components/HomeCard.astro";
import { companyCards } from '@assets/data/homePage';
---
<div id="companies" class="relative bg-gray-800 pb-32">
  <div class="absolute inset-0">
    <Image
      src={backgroundImage}
      class="h-full w-full object-cover"
      alt="Stock charts"
    />
    <div
      class="absolute inset-0 bg-gradient-to-r from-gray-600 to-gray-300 mix-blend-multiply"
      aria-hidden="true"
    >
    </div>
  </div>
  <div class="relative mx-auto max-w-7xl py-24 px-4 sm:py-24 sm:px-6 lg:px-8">
    <h1
      class="text-4xl font-bold tracking-tight text-white md:text-5xl lg:text-6xl"
    >
      Our companies
    </h1>
  </div>
</div>

<!-- Overlapping cards -->
<section
  class="relative z-10 mx-auto -mt-32 max-w-7xl px-4 pb-32 sm:px-6 lg:px-8"
  aria-labelledby="contact-heading"
>
  <h2 class="sr-only" id="contact-heading">Our companies</h2>
  <div class="grid grid-cols-1 gap-y-20 lg:grid-cols-2 lg:gap-y-0 lg:gap-x-8">
    {companyCards.map(card => (
      <HomeCard heading={card.heading} description={card.description}, linkText={card.linkText} link={card.link} />
    ))}
  </div>
</section>
