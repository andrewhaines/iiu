---
import Head from "@components/Head.astro";
import AdvisorsHero from "@components/AdvisorsHero.astro";
import AdvisorsUnique from "@components/AdvisorsUnique.astro";
import AdvisorsServices from "@components/AdvisorsServices.astro";
import DataCard from "@components/DataCard.astro";
import ContactForm from "@components/AdvisorsContactForm.astro";
import Foot from "@components/Foot.astro";
import { cards } from '@assets/data';
import { directusData } from '@assets/data/advisorsPage'
const DataCardData = await directusData()
---

<Head />

<div class="bg-white">
	<AdvisorsHero />
  <AdvisorsUnique />
	<AdvisorsServices />

  <!-- Overlapping cards -->
  <section
    class="relative z-10 mx-auto -mt-32 max-w-7xl px-4 pb-32 sm:px-6 lg:px-8"
    aria-labelledby="contact-heading"
  >
    <h2 class="sr-only" id="contact-heading">Our services</h2>
    <div class="grid grid-cols-1 gap-y-20 lg:grid-cols-2 lg:gap-y-0 lg:gap-x-8">
      {DataCardData.map(card => (
				<DataCard heading={card.heading} description={card.description}, linkText={card.linkText} link={card.link} />
			))}
    </div>
  </section>

	<ContactForm />
</div>
<Foot />
